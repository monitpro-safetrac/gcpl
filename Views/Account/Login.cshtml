@{
    Layout = null;
}
@model MonitPro.Models.LoginViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MonitPro Solutions</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .wide {
            width: 100%;
            height: 100%;
            height: calc(100% - 1px);
            background-image: url('Images/home.jpg');
            background-size: cover;
        }

        .intro-text {
            text-align: center;
            color: #FFF;
            line-height: 50px;
            z-index: 0;
            text-transform: uppercase;
            font-size: 60px;
            float: none;
        }

        .header-content-wrap {
            position: relative;
            padding: 150px 0 210px;
        }
    </style>

</head>
<body class="wide">
    <div class="header-content-wrap">
        <h2 class="intro-text"><b>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;e-Work Permit</b></h2>
        <h2 class="intro-text"><b>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Contract Management System</b></h2>
    </div>
    <div class="table-responsive">
        <nav class="navbar navbar-header navbar-fixed-top" role="navigation" style="background-color:white">
            <div class="col-sm-12">
                <table border="0" width="100%" class="table-responsive">
                    <tr>
                        <td><img  height="50" src="~/Images/customer-logo.png"></td>
                        <td valign="middle" nowrap style="text-align:center;vertical-align:middle">
                            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "LoginForm" }))
                            {
                                @Html.AntiForgeryToken()
                                <table width="80%" border="0">
                                    <tr><td style="text-align:center">@Html.TextBoxFor(m => m.UserName, new { @class = "form-control input-sm", @maxlength = "25", @width = "300px", @placeholder = "Username" })</td><td>@Html.PasswordFor(m => m.Password, new { @class = "form-control input-sm", @maxlength = "15", @width = "300px", @placeholder = "Password" })</td><td><input type="submit" value="Sign in" style="width:100px" class="btn btn-primary" /></td></tr>
                                    <tr>
                                        <td style="text-align:center" colspan="2" class="danger">
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                                            @Html.ValidationMessage("ValidationError")

                                        </td>
                                    </tr>
                                </table>
                            }
                        </td>
                        <td class="pull-right" style="text-align:right"><img height="50" src="~/Images/monitpro-logo.png"></td>
                    </tr>
                </table>
            </div>
        </nav>
        <nav class="navbar navbar-fixed-bottom" role="navigation" style="background-color:white">
            <div class="pull-left">All rights reserved &copy; @DateTime.Now.ToString("yyyy") MonitPro Solutions Private Limited.</div>
            <div class="pull-right">
                <b>Visit us :</b>
                <a href="http://monitprosolutions.com/" target="_blank"><img class="img-circle" height="35" src="~/Images/website.jpg" /></a>&nbsp;&nbsp;
                <a href="https://www.linkedin.com/company/monitpro-solutions-private-ltd" target="_blank">
                    <img class="img-circle" height="35" src="~/Images/linkedin.png" />
                </a>&nbsp;&nbsp;
                <a href="https://www.facebook.com/monitprosolutions/?fref=ts" target="_blank"><img class="img-circle" height="35" src="~/Images/facebook.png" /></a>&nbsp;&nbsp;&nbsp;
            </div>
        </nav>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>

</html>
