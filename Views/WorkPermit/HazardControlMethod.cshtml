        <td>@Html.CheckBoxFor(m => m.HazardControlMethod.IsolatePipingDisconnect) Disconnect</td>
        <td>@Html.CheckBoxFor(m => m.HazardControlMethod.ExternalBarricades)External Barricades/Barrier Tape</td>
    </tr>
     <tr>
         <td>@Html.CheckBoxFor(m => m.HazardControlMethod.FireExtinguisher) Fire Extinguisher </td>
