        <td>@Html.CheckBoxFor(m => m.HazardControlMethod.FlushPurgeDrainClean) Flush/Purge/Drain/Clean</td>
        <td>@Html.CheckBoxFor(m => m.HazardControlMethod.CommunicationVerbal) Communication Verbal
        </td>
    </tr>
    <tr>
        <td>@Html.CheckBoxFor(m => m.HazardControlMethod.GroundFaultCircuitInterrupter) Ground Fault Circuit Interrupter</td>
        <td>@Html.CheckBoxFor(m => m.HazardControlMethod.IsolatePiping) Isolate Piping (specify)</td>
        <td>@Html.CheckBoxFor(m => m.HazardControlMethod.LockoutProceduresInitiated) Lockout Procedures Initiated</td>
        <td>@Html.CheckBoxFor(m => m.HazardControlMethod.NonSparkingTools) Non Sparking Tools</td>
