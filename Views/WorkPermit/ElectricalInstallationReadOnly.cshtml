@model ValsparApp.Models.WorkPermit

@{
    Layout = null;
}

<table class="table-bordered table-responsive">
    <thead><H3>Electrical Installation CheckList</H3></thead>
    <tr style="font-weight:bold">
        <td>Electrical Installation CheckList</td>
        <td>Yes</td>
        <td>N/A</td>
    </tr>
    <tr><td width="80%" class="text-left">1) Isolation of power to the area by opening MCB (Miniature Circuit Breaker) Or  ACB (Air Circuit Breaker) / SFU ensured</td><td width="20%" class="text-left">@Html.RadioButtonFor(m => m.ElectricalInstallation.MCBorACBorSFU, "1", new { @disabled = "true" }) </td><td>@Html.RadioButtonFor(m => m.ElectricalInstallation.MCBorACBorSFU, "1", new { @disabled = "true" })</td></tr>
    <tr><td width="80%" class="text-left">2) VCB (vacuum circuit breaker), AB (air break switch) isolated.</td><td width="20%" class="text-left">@Html.RadioButtonFor(m => m.ElectricalInstallation.VCBorABIsolated, "1", new { @disabled = "true" }) </td><td>@Html.RadioButtonFor(m => m.ElectricalInstallation.VCBorABIsolated, "1", new { @disabled = "true" })</td></tr>
    <tr><td width="80%" class="text-left">3) Concerned equipment fuses removed</td><td width="20%" class="text-left">@Html.RadioButtonFor(m => m.ElectricalInstallation.EquipmentFusesRemoved, "1", new { @disabled = "true" }) </td><td>@Html.RadioButtonFor(m => m.ElectricalInstallation.EquipmentFusesRemoved, "1", new { @disabled = "true" })</td></tr>
    <tr><td width="80%" class="text-left">4) All possible back feeding supplies disconnected.</td><td width="20%" class="text-left">@Html.RadioButtonFor(m => m.ElectricalInstallation.SuppliesDisconnected, "1", new { @disabled = "true" }) </td><td>@Html.RadioButtonFor(m => m.ElectricalInstallation.SuppliesDisconnected, "1", new { @disabled = "true" })</td></tr>
    <tr><td width="80%" class="text-left">5) Equipment disconnected ElectricalInstallationly / mechanically</td><td width="20%" class="text-left">@Html.RadioButtonFor(m => m.ElectricalInstallation.EquipmentDisconnected, "1", new { @disabled = "true" }) </td><td>@Html.RadioButtonFor(m => m.ElectricalInstallation.EquipmentDisconnected, "1", new { @disabled = "true" })</td></tr>
    <tr><td width="80%" class="text-left">6) Equipment earthing ensured.</td><td width="20%" class="text-left">@Html.RadioButtonFor(m => m.ElectricalInstallation.EarthingEnsured, "1", new { @disabled = "true" }) </td><td>@Html.RadioButtonFor(m => m.ElectricalInstallation.EarthingEnsured, "1", new { @disabled = "true" })</td></tr>
    <tr><td width="80%" class="text-left">7) Danger signs / cautionary tags / placards displayed.</td><td width="20%" class="text-left">@Html.RadioButtonFor(m => m.ElectricalInstallation.DangerSymbolDisplayed, "1", new { @disabled = "true" }) </td><td>@Html.RadioButtonFor(m => m.ElectricalInstallation.DangerSymbolDisplayed, "1", new { @disabled = "true" })</td></tr>
    <tr><td width="80%" class="text-left">8) Suitable rubber mats provided</td><td width="20%" class="text-left">@Html.RadioButtonFor(m => m.ElectricalInstallation.RuberMatsProvided, "1", new { @disabled = "true" }) </td><td>@Html.RadioButtonFor(m => m.ElectricalInstallation.RuberMatsProvided, "1", new { @disabled = "true" })</td></tr>
    <tr><td width="80%" class="text-left">9) Capacitors discharged & disconnected.</td><td width="20%" class="text-left">@Html.RadioButtonFor(m => m.ElectricalInstallation.CapacitorsDischarged, "1", new { @disabled = "true" }) </td><td>@Html.RadioButtonFor(m => m.ElectricalInstallation.CapacitorsDischarged, "1", new { @disabled = "true" })</td></tr>
    <tr><td width="80%" class="text-left">10) Suitable gloves issued.</td><td width="20%" class="text-left">@Html.RadioButtonFor(m => m.ElectricalInstallation.GlovesIssued, "1", new { @disabled = "true" }) </td><td>@Html.RadioButtonFor(m => m.ElectricalInstallation.GlovesIssued, "1", new { @disabled = "true" })</td></tr>
    <tr><td width="80%" class="text-left">11) Adequate lighting and ventilation provided.</td><td width="20%" class="text-left">@Html.RadioButtonFor(m => m.ElectricalInstallation.LightingAndVentilationProvided, "1", new { @disabled = "true" }) </td><td>@Html.RadioButtonFor(m => m.ElectricalInstallation.LightingAndVentilationProvided, "1", new { @disabled = "true" })</td></tr>
    <tr><td width="80%" class="text-left">12) Area people where power is going to be isolated are informed..</td><td width="20%" class="text-left">@Html.RadioButtonFor(m => m.ElectricalInstallation.PowerIsolationInformed, "1", new { @disabled = "true" }) </td><td>@Html.RadioButtonFor(m => m.ElectricalInstallation.PowerIsolationInformed, "1", new { @disabled = "true" })</td></tr>
    <tr><td width="80%" class="text-left">13) Safety belts for working at heights on poles / structures provided.</td><td width="20%" class="text-left">@Html.RadioButtonFor(m => m.ElectricalInstallation.SafetyBeltsProvided, "1", new { @disabled = "true" }) </td><td>@Html.RadioButtonFor(m => m.ElectricalInstallation.SafetyBeltsProvided, "1", new { @disabled = "true" })</td></tr>
    <tr><td width="80%" class="text-left">14) Suitable ladder / scaffolding   provided for carrying the work at heights.</td><td width="20%" class="text-left">@Html.RadioButtonFor(m => m.ElectricalInstallation.LadderProvided, "1", new { @disabled = "true" }) </td><td>@Html.RadioButtonFor(m => m.ElectricalInstallation.LadderProvided, "1", new { @disabled = "true" })</td></tr>
    <tr><td width="80%" class="text-left">15) Area of the work barricaded to restrict the un authorized personal entry.</td><td width="20%" class="text-left">@Html.RadioButtonFor(m => m.ElectricalInstallation.BarricadedPlaced, "1", new { @disabled = "true" }) </td><td>@Html.RadioButtonFor(m => m.ElectricalInstallation.BarricadedPlaced, "1", new { @disabled = "true" })</td></tr>
    <tr><td width="80%" class="text-left">16) Others</td><td width="20%" class="text-left">@Html.TextBoxFor(m => m.ElectricalInstallation.Others, new { @disabled = "true" }) </td></tr>
    <tr><td width="80%" class="text-left">17) Specify safety recommendations, if any:</td><td width="20%" class="text-left">@Html.TextBoxFor(m => m.ElectricalInstallation.SafetyRecommentations, new { @disabled = "true" }) </td></tr>
</table>
