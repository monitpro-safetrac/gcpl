@model ValsparApp.Models.ContractList
<script src="~/Scripts/tableHeadFixer.js"></script>
@using (Html.BeginForm())
{
    <!DOCTYPE html>
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h1 class="panel-title">Contract List</h1>
        </div>
        <div id="container" class="table-responsive">
            <table id="ContractList" class="table-bordered table-responsive" cellpadding="2" cellspacing="2" width="100%">
                <thead>
                    <tr>
                        <th>SNo</th>
                        <th>
                            Action
                        </th>
                        <th>Company Name</th>
                        <th>Supervisor First Name </th>
                        <th>Supervisor Last Name</th>
                        <th>Email Address</th>
                        <th>Mobile No</th>
                        <th>Frequency Of Evaluation</th>
                        <th>Next Assessment Date</th>
                        <th>Status</th>
                        
                    </tr>
                </thead>
                @for (var i = 0; i < Model.Contract.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td> 
                        <td>@Html.ActionLink("Edit", "UpdateContract", new { id = Model.Contract[i].ContractID })</td>
                        <td>@Model.Contract[i].CompanyName </td>
                        <td>@Model.Contract[i].SupervisorFirstName</td>
                        <td>@Model.Contract[i].SupervisorLastName </td>
                        <td>@Model.Contract[i].EmailAddress</td>
                        <td>@Model.Contract[i].MobileNo</td>
                        <td>@Model.Contract[i].FrequencyName</td>
                        <td>@Model.Contract[i].NextAssessmentDate</td>
                        <td>@Model.Contract[i].Status</td>
                    </tr>
                }
            </table>
        </div>

    </div>
}
<script>
    $(document).ready(function () {
        $("#ContractList").tableHeadFixer({ "left": 0 });
        document.getElementById('container').style.height = window.innerHeight - 100 + "px";
        document.getElementById('container').style.width = window.innerWidth - 10 + "px";
    });
</script>