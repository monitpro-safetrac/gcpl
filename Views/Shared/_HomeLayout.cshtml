<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MonitPro Solutions</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="table-responsive">
        <nav class="navbar navbar-header navbar-fixed-top" role="navigation" style="background-color:white">
            <div class="img-responsive pull-left">
                <img height="50" src="~/Images/customer-logo.png">
            </div>
            <div class="img-responsive pull-right">
                <img height="30" src="~/Images/monitpro-logo.png">
            </div>
        </nav>
    </div>
    <div class="table-responsive">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
