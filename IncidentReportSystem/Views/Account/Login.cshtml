@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
@model MonitPro.Models.LoginViewModel

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MonitPro Solutions</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Views/Account/tt.css">
    <style>
        .wide {
            padding-top: 50px;
            width: 100%;
            height: 100%;
            height: calc(100% - 1px);
            background-image: url('Images/gcpl_logo.jpg');
            background-size: cover;
            background-repeat: no-repeat;
        }

        .intro-text {
            text-align: center;
            color: #FFF;
            line-height: 50px;
            z-index: 0;
            text-transform: uppercase;
            font-size: 60px;
            float: none;
        }

        .header-content-wrap {
            position: relative;
            padding: 150px 0 210px;
        }

        .texts {
            color: black;
            font-size: 4vw;
            font-weight: bold;
            width: 80%;
            text-align: center;
            position: absolute;
            top: 19%;
            left: 10%;
            /*font-family: monospace;*/
         
        }

    </style>

</head>
@using (Html.BeginForm())
{

    <body style="overflow-y:hidden;">

        <div class="table-responsive">
            <nav class="navbar navbar-header navbar-fixed-top" role="navigation" style="background-color:white">
                <div class="col-sm-12">
                    <table border="0" width="100%" class="table-responsive">
                        <tr>

                            <td><img width="150" height="50" src="~/Images/gcpl_logo2.png"></td>
                            <td valign="middle" nowrap style="text-align:center;vertical-align:middle">
                                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "LoginForm" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <table width="80%" border="0">
                                        <tr>
                                            <td style="text-align:center">@Html.TextBoxFor(m => m.UserName, new { @class = "form-control input-sm", @maxlength = "25", @width = "300px", @placeholder = "Username", @autocomplete = "off" })</td>
                                            <td>@Html.PasswordFor(m => m.Password, new { @class = "form-control input-sm", @maxlength = "15", @width = "300px", @placeholder = "Password" })</td>
                                            <td><input type="submit" value="Sign in" style="width:100px" class="btn btn-primary" /></td>
                                        </tr>
                                        <tr>
                                            <td style="text-align:center" colspan="2" class="danger">
                                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                                                @Html.ValidationMessage("ValidationError")

                                            </td>
                                        </tr>
                                    </table>
                                }
                            </td>
                            <td class="pull-right" style="text-align:right;align-content:center"><img width="150" height="40" src="~/Images/monitpro-logo.png"></td>
                        </tr>
                    </table>
                </div>
            </nav>
            <div>
                <div style="position: relative;">
                    <img src="~/Images/GCPL.jpg" style="height: 100%; width: 100%; background-size: cover; ">
                    <div @*style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); text-align: center;"*@ class="texts">
                        @*<h1 style="color:aliceblue; font-size: 55px; font-weight: bold; white-space: nowrap">GCPL SAFETRAC PROJECT - BHARUCH</h1>
        <h1 style="color: aliceblue; font-size: 55px; font-weight: bold; white-space: nowrap;"> GUJARAT</h1>*@
                        GUJARAT CHEMICAL PORT LIMITED<br /> SAFEOWL EHS SOLUTIONS
                    </div>
                </div>
            </div>
                <nav class="navbar navbar-fixed-bottom" role="navigation" style="background-color:white">
                    <div class="pull-left">All rights reserved &copy; @DateTime.Now.ToString("yyyy") MonitPro Solutions Private Limited.</div>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

                    <div class="pull-right">
                        <b>Visit us : monitprosolutions.com</b>
                        @*<a href="http://monitprosolutions.com/" target="_blank"><img class="img-circle" height="35" src="~/Images/website.jpg" /></a>&nbsp;&nbsp;
                    <a href="https://www.linkedin.com/company/monitpro-solutions-private-ltd" target="_blank">
                        <img class="img-circle" height="35" src="~/Images/linkedin.png" />
                    </a>&nbsp;&nbsp;
                    <a href="https://www.facebook.com/monitprosolutions/?fref=ts" target="_blank"><img class="img-circle" height="35" src="~/Images/facebook.png" /></a>&nbsp;&nbsp;&nbsp;
                        *@
                    </div>
                </nav>
            </div>


            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
</body>
}
</html>
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
         {
           alert("@ViewBag.Message");

       };

    </script>
}
