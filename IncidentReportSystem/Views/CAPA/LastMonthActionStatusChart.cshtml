@model IncidentReportSystem.Models.ActionsStatusChartViewModel

@{

    var myChart1 = new Chart(width: 400, height: 300, themePath: "Customtheme1.xml")

        .AddTitle("Overall CAPA Status", "main")
        .AddSeries(name: "serie", chartType: "Pie",

            xValue: Model.ActionCounts, xField: "StatusName",
            yValues: Model.ActionCounts, yFields: "TotalCount")
                .AddLegend()
        .Write();

}


