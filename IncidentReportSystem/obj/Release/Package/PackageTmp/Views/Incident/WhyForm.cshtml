@model IncidentReportSystem.Models.NewIncidentViewModel

@{
    ViewBag.Title = "WhyForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    html{
        overflow:scroll;
    }
</style>
@using (Html.BeginForm("WhyForm", "Incident", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <!DOCTYPE html>
    <div class="container-fluid">
        <div class="div-border" style="width:50%">
            <h1 class="div-h1"><span class="div-h1-span">&nbsp;FIVE WHY’S form &nbsp;</span></h1>
            
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IncidentID)
            <div class="table-responsive ">

                <table style="width:60%" align="center" class="table-borderedless table-responsive">

                    <tbody>
                        <tr>
                            <th colspan="2">(Use only for Tier 3 & 4 Incidents only)</th>

                        </tr>
                        <tr>
                            <td>1. Why did “above” happen?</td>
                            <td>@Html.TextAreaFor(model => model.WhyForm.Why, new { @style = "width:100%;   max-width: 100%;" }) </td>
                        </tr>
                        <tr>
                            <td>2. Why did “1” happen?</td>
                            <td>@Html.TextAreaFor(model => model.WhyForm.FirstWhy, new { @style = "width:100%;   max-width: 100%;" }) </td>
                        </tr>
                        <tr>
                            <td>3. Why did “2” happen?</td>
                            <td>@Html.TextAreaFor(model => model.WhyForm.SecondWhy, new { @style = "width:100%;   max-width: 100%;" }) </td>
                        </tr>
                        <tr>
                            <td>4. Why did “3” happen?</td>
                            <td>@Html.TextAreaFor(model => model.WhyForm.ThirdWhy, new { @style = "width:100%;   max-width: 100%;" }) </td>
                        </tr>
                        <tr>
                            <td>5. Why did “4” happen?</td>
                            <td>@Html.TextAreaFor(model => model.WhyForm.FourthWhy, new { @style = "width:100%;   max-width: 100%;" }) </td>
                        </tr>

                        <tr>
                            <td>6. Why did “5” happen?</td>
                            <td>@Html.TextAreaFor(model => model.WhyForm.FifthWhy, new { @style = "width:100%;   max-width: 100%;" }) </td>
                        </tr>
                        <tr>
                            <td colspan="2" align="center">
                                <button class="btn btn-primary" type="submit" id="btnsubmit" title="Submit">Save</button>&nbsp;&nbsp;
                                <input type="button" class="btn btn-primary" value="Edit Incident" onclick="EditIncident(@Model.IncidentID);" />

                            </td>

                        </tr>
                    </tbody>
                </table>


            </div>
        </div>
    </div>
}
@if (ViewBag.SessMessage != null)
{
    <script type="text/javascript">
        {
            alert("Newer session exists in another browser/system...Logout");
            window.location.href = "../Account/Login";
        };

    </script>
}
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
          {
                alert("@ViewBag.Message");

        };

    </script>
}

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
    <script>

        function EditIncident(IncID) {

            window.location.href = '../Incident/EditIncident?incidentID=' + IncID;
        }
    </script>

}

