                        <table class="table table-striped header-fixed table-hover" id="SearchResults">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>Plant / Area</th>
                                    <th>Incident ID</th>
                                    <th>Incident Category</th>
                                    <th>Incident Classification</th>
                                    <th>Incident Description</th>
                                    <th>Incident Date</th>
                                    <th>Closed Date</th>
                                    <th>Status</th>
                                    <th>Downloads </th>

                                </tr>
                            </thead>
