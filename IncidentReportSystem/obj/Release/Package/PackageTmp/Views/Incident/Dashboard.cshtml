@model  IncidentReportSystem.Models.IncidentListViewModel

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/datetimepicker/jquery.datetimepicker.css" />

<script src="~/datetimepicker/build/jquery.datetimepicker.full.min.js"></script>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
          {
                alert("@ViewBag.Message");
                window.location.href = "../Account/Login" ;
        };

    </script>
}

<div class="row" >
    <div class="col-lg-4">

        <input type="button" id="btnLastyears" name="Last 12 Month" style="background-color:#DCDCDC" value="Last 12 Month" />&nbsp;
        <input type="button" id="btnLastMonth" name="Last Month" value="Last Month" style="background-color:#DCDCDC" />&nbsp;
    </div>

</div>
<div class="row" id="list">

    <div class="col-lg-12">

        @*<div class="col-lg-10">*@

        <table width="78%" id="firstshowyearchart" align="center" cellpadding="2">

            <tr>
                <td><p><img src="CurrentYearChart" /></p></td>
                <td><p><img src="IncidentCategoryChart" /> </p></td>
                <td><p><img src="IncidentClassificationCount" /> </p></td>
            </tr>


            <tr>
                <td><p><img src="CurrentStatusChart" /> </p></td>
                <td><p><img src="RootCauseCount" /> </p></td>
                <td><p><img src="IncidentRecommenChart" /> </p></td>
            </tr>

        </table>



        <table width="78%" id="LastyearsChart" align="center" cellpadding="2">

            <tr>
                <td><p><img src="CurrentYearChart" /></p></td>
                <td><p><img src="IncidentCategoryChart" /> </p></td>
                <td><p><img src="IncidentClassificationCount" /> </p></td>
            </tr>


            <tr>
                <td><p><img src="CurrentStatusChart" /> </p></td>
                <td><p><img src="RootCauseCount" /> </p></td>
                <td><p><img src="IncidentRecommenChart" /> </p></td>
            </tr>

        </table>




        <table width="78%" id="LastMonthChart" align="center" cellpadding="2">

            <tr>
                <td><p><img src="LastMonthlyReportChart" /></p></td>
                <td><p><img src="LastMonthIncidentCategoryChart" /> </p></td>
                <td><p><img src="LastMonthIncidentClassificationCount" /> </p></td>
            </tr>

            <tr>
                <td><p><img src="LastMonthStatusChart" /> </p></td>
                <td><p><img src="LastMonthRootCauseCount" /> </p></td>
                <td><p><img src="LastMonthIncidentRecommenChart" /> </p></td>
            </tr>

        </table>




        <table width="78%" id="CurrentMonthChart" align="center" cellpadding="2">

            <tr>
                <td><p><img src="CurrentMonthlyReportChart" /></p></td>
                @*<td><p><img src="IncidentCategoryChart" /> </p></td>*@
            </tr>


            @*<tr>
                    <td><p><img src="CurrentStatusChart" /> </p></td>
                    <td><p><img src="RootCauseCount" /> </p></td>
                    <td><p><img src="IncidentRecommenChart" /> </p></td>
                </tr>*@

        </table>


    </div>
</div>


<script type="text/javascript">
        jQuery('#FromDate').datetimepicker({
            format: 'd/m/Y H:i:s',
            lang: 'ru',
            step: 30
        });

        jQuery('#ToDate').datetimepicker({
            format: 'd/m/Y H:i:s',
            lang: 'ru',
            step: 30
        });
        $(document).ready(function () {

            document.getElementById('list').style.height = window.innerHeight - 100 + "px";
            document.getElementById('list').style.width = window.innerWidth - 10 + "px";
        });
</script>

@* On page loading when click IIRdashboard *@
<script type="text/javascript">
        $(document).ready(function () {
            $("#LastyearsChart").hide();
            $("#LastMonthChart").hide();
           
            $("#btnLastyears").css("background-color", "#538DFF");
            $("#btnLastyears").css("color", "#FFFFFF");
        });

</script>

@* last 12 month button click event *@
<script type="text/javascript">
        $("#btnLastyears").click(function () {
            $("#LastyearsChart").show();
            $("#LastMonthChart").hide();
          
            $("#firstshowyearchart").hide();
        });

</script>

@* last  month button click event *@
<script type="text/javascript">
        $("#btnLastMonth").click(function () {
            $("#LastMonthChart").show();
            $("#LastyearsChart").hide();
           
            $("#firstshowyearchart").hide();
        });

</script>







<script type="text/javascript">
        $(document).ready(function () {
            $("#btnLastyears").bind('click', function (event) {
                $("#btnLastyears").css("background-color", "#538DFF");
                $("#btnLastyears").css("color", "#FFFFFF");
                $("#btnLastMonth").css("background-color", '');
                $("#btnCurrentMonth").css("background-color", '');
                $("#btnLastMonth").css("color", '');
            });


        });


        $(document).ready(function () {
            $("#btnLastMonth").bind('click', function (event) {
                $("#btnLastMonth").css("background-color", "#538DFF");
                $("#btnLastyears").css("background-color", '');
                $("#btnLastMonth").css("color", "#FFFFFF");
                $("#btnCurrentMonth").css("background-color", '');
                $("#btnLastyears").css("color", '');
            });


        });

        $(document).ready(function () {
            $("#btnCurrentMonth").bind('click', function (event) {
                $("#btnCurrentMonth").css("background-color", "#2B65EC");
                $("#btnLastyears").css("background-color", '');
                $("#btnLastMonth").css("background-color", '');
            });


        });

</script>