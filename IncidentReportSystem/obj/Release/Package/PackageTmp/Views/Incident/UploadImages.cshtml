            else {
                alert("Only JPEG images are accepted");
                document.getElementById("ImageFile").value = "";
            }
        }
        function DeleteImage(IncImageID) {
            var i;
            if (confirm("Are you sure you want to delete ?") == true) {
                i = "OK";
                var options = { "backdrop": "static", keyboard: true };

                $.ajax({
