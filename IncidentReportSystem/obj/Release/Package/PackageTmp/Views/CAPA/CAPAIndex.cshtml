                                            }
                                        }
                                    </td>

                                    <td>
                                        <a href="../CAPA/CAPAPrintPDF/@item.CAPAID" target="_blank" title="Pdf"><img src="~/Images/pdficon.jpg" style="height:30px;width:30px;" /></a>
                                        @if (item.FileName != "")
                                        {
