@model MonitPro.Models.Contract
@{
    Layout = null;
}
<style>
    .table tbody > tr > td, .table tfoot > tr > td {
        padding: 1px;
        line-height: 1.428571429;
        vertical-align: top;
        border-top: 0px;
    }
</style>

<table id="fixTable" class="table table-responsive ">
    <tr>
        <td>
            <div class="row">

                <div class="col-lg-2 col-sm-2">
                    <label>Type Of Work :</label>
                </div>

                @for (var i = 0; i < Model.WorkType.Count; i++)
                {
                    <div class="col-lg-2 col-sm-2" style="text-align:left">

                        @Html.HiddenFor(m => m.WorkType[i].WorkTypeID)@Html.HiddenFor(m => m.WorkType[i].WorkTypeName)
                        @Html.CheckBoxFor(m => m.WorkType[i].Ischecked, htmlAttributes: new { @class = "big-checkbox", onclick = "IsUserSelected(this);" })
                        @Model.WorkType[i].WorkTypeName

                    </div>
                }

            </div>
            @*<h5><b>Type Of Work :</b></h5>
                @for (var i = 0; i < Model.WorkType.Count; i++)
                {
                    <div class="col-md-3 col-sm-3 col-xs-3">

                        @Html.HiddenFor(m => m.WorkType[i].WorkTypeID)@Html.HiddenFor(m => m.WorkType[i].WorkTypeName)
                        @Html.CheckBoxFor(m => m.WorkType[i].Ischecked, htmlAttributes: new { @class = "big-checkbox", onclick = "IsUserSelected(this);" })
                        @Model.WorkType[i].WorkTypeName
                    </div>

                }*@
        </td>
    </tr>
    <tr>
        @if (ViewBag.IsValidationFailed == true)
        {
            <td colspan="3" class="text-danger text-center">
                <strong>@Html.ValidationMessage("PPEValidation")</strong>
            </td>

        }

    </tr>



</table>








